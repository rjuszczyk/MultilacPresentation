<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgorund_full"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/livex_logo"
        android:visibility="invisible"
        android:layout_marginTop="24dp"
        />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:scrollbarStyle="outsideOverlay"
    android:fillViewport="true"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WYŚLIJ"

                android:id="@+id/dalej"
                android:alpha="0.5"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="#FFF"
                android:textSize="23sp"
                android:background="@drawable/button_bg"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="120dp"

        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/uzupelnij_dane"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/przedst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Przedstawiciel Medyczny"
            android:gravity="center|left"
            android:paddingLeft="8dp"
            android:background="@drawable/background_expandable"
            android:textColor="@color/gray_text"
            android:textSize="16sp"
            android:layout_margin="15dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/miasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Miasto"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:background="@drawable/background_expandable"
                android:textColor="@color/gray_text"
                android:layout_margin="15dp"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/apteka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Apteka"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:background="@drawable/background_expandable"
                android:textColor="@color/gray_text"
                android:textSize="16sp"
                android:layout_margin="15dp"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:enabled="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Liczba uczestników prezentacji"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:background="@drawable/background"
                android:textColor="@color/gray_text"
                android:textSize="16sp"
                android:layout_margin="15dp"
                android:imeOptions="actionNext"

                android:inputType="textCapWords"
                android:singleLine="true"
                android:nextFocusForward="@+id/nazwisko"
                />
            <EditText
                android:id="@+id/imie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:textSize="16sp"
                android:background="@drawable/background_small"
                android:textColor="@color/gray_text"
                android:layout_margin="15dp"
                android:imeOptions="actionNext"

                android:inputType="numberDecimal"
                android:singleLine="true"

                android:nextFocusForward="@+id/telefon"
                />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WYŚLIJ"
            android:visibility="invisible"
            android:alpha="0.5"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="23sp"
            android:background="@drawable/button_bg"/>


    </LinearLayout>


    </FrameLayout>
</ScrollView>

</LinearLayout>